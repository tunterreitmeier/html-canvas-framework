{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./build/",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "declaration": true
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}
